{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "strictPropertyInitialization": false,
    "allowJs": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@models/*": [
        "models/*"
      ],
      "@views/*": [
        "views/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@repository/*": [
        "repository/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
    },
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
