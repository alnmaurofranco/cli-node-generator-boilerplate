{
  "name": "node-generator-boilerplate",
  "version": "1.1.3",
  "description": "A CLI help generate a new express server boilerplate with Javascript or Typescript.",
  "main": "bin/node-generator-boilerplate.js",
  "bin": {
    "node-generator-boilerplate": "bin/node-generator-boilerplate.js",
    "generator-node": "bin/node-generator-boilerplate.js",
    "create-node-app": "bin/node-generator-boilerplate.js"
  },
  "scripts": {
    "start": "node dist/src/lib/cli.js",
    "style:lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run style:lint -- --fix",
    "style:format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky install",
    "prebuild": "npm run style:lint && npm run style:format",
    "build": "rm -rf dist && tsc"
  },
  "lint-staged": {
    "src/lib/*.{js,jsx}": [
      "npm run lint:fix",
      "npm run format:fix",
      "git add -A ."
    ]
  },
  "author": "alnmaurofranco",
  "repository": {
    "type": "git",
    "url": "https://github.com/alnmaurofranco/cli-node-generator-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "javascript",
    "express",
    "typescript",
    "koa",
    "api",
    "boilerplate",
    "generator"
  ],
  "license": "MIT",
  "dependencies": {
    "cfonts": "^2.10.1",
    "chalk": "^5.0.1",
    "ncp": "^2.0.0",
    "ora": "^6.1.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/ncp": "^2.0.5",
    "@types/node": "^17.0.35",
    "@types/prompts": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
